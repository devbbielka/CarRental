<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/round_conner_whitebg"
    tools:context=".ui.SaleActivity2">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pickupDate"
                    android:textColor="@color/colorSecondary"
                    android:background="@color/colorPrimaryDark"
                    android:text="Pick Up Date"
                    android:padding="8dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/returnDate"
                    android:textColor="@color/colorSecondary"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="30dp"
                    android:padding="8dp"
                    android:text="Return Date"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/timeChose"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pickupTime"
                    android:textColor="@color/colorSecondary"
                    android:background="@color/colorPrimaryDark"
                    android:text="Pick Up Time"
                    android:padding="8dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/returnTime"
                    android:textColor="@color/colorSecondary"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="30dp"
                    android:padding="8dp"
                    android:text="Return Time"
                    />
            </LinearLayout>

            <CheckBox
                android:id="@+id/carHourlyRent"
                android:textColor="@color/colorSecondary"
                app:buttonTint="@color/colorSecondary"
                android:layout_gravity="center"
                android:text="Hourly Rent"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="250dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="166dp"
                android:layout_height="41dp"
                android:layout_marginTop="20dp"

                android:text="Name: "
                android:textColor="@color/colorSecondary"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondary"
                android:backgroundTint="@color/colorSecondary"
                android:hint="Name"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="Driver's license #:"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondary"
                android:backgroundTint="@color/colorSecondary"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtDriverLicense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondary"
                android:backgroundTint="@color/colorSecondary"
                android:ems="10"
                android:hint="#"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="195dp"
                android:layout_height="43dp"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondary"
                android:backgroundTint="@color/colorSecondary"
                android:text="Deposit:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtDeposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Deposit"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondary"
                android:backgroundTint="@color/colorSecondary"
                android:inputType="number" />

            <TextView
                android:id="@+id/txtCar"
                android:layout_width="379dp"
                android:layout_height="98dp"
                android:text="Car:"
                android:textColor="@color/colorSecondary"
                android:textColorHint="@color/colorSecondary"
                android:backgroundTint="@color/colorSecondary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtTotalAmount"
                android:layout_width="382dp"
                android:layout_height="68dp"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/calculatePrice"
                    android:textColor="@color/colorSecondary"
                    android:background="@color/colorPrimaryDark"
                    android:text="Calculate Price"
                    android:padding="8dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/book"
                    android:textColor="@color/colorSecondary"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginLeft="30dp"
                    android:padding="8dp"
                    android:text="Book"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>